<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeFragment">

    <data>
        <import type="android.view.View"/>

        <variable
            name="view"
            type="com.projek_tugas_akhir.arsitektur_mvvm_dan_greendao.ui.main.MainActivity" />

        <variable
            name="viewmodel"
            type="com.projek_tugas_akhir.arsitektur_mvvm_dan_greendao.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingVertical="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn_menu_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_create"/>

            <TextView
                android:id="@+id/text_execution_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewmodel.appVersion}"/>

            <Button
                android:id="@+id/btn_menu_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_read"/>

            <Button
                android:id="@+id/btn_menu_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_update"/>

            <Button
                android:id="@+id/btn_menu_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_delete"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>